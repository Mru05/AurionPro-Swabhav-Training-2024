package com.techlabs.structural.facade.model;

public class HotelReceiption {
    public static void main(String[] args) {
        // Create an instance of IndianHotel
        IHotel indHotel = new IndianHotel();
        // Get the Indian menu
        indHotel.get_menu().display();
    }
}

interface IHotel {
    IMenu get_menu();
}

class IndianHotel implements IHotel {
    @Override
    public IMenu get_menu() {
        return new IndianMenu();
    }
}

interface IMenu {
    void display();
}

class IndianMenu implements IMenu {
    @Override
    public void display() {
        System.out.println("Displaying Indian Menu");
    }
}
