package com.techlabs.creational.factorydesign.test;

import com.techlabs.creational.factorydesign.model.AccountFactory;
import com.techlabs.creational.factorydesign.model.IAccount;

public class IAccountTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		AccountFactory savingsFactory = new AccountFactory();
        IAccount savingsAccount = AccountFactory.makeAccount("SavingAccount");
        savingsAccount.creditAmount(200);
        savingsAccount.debitAmount(150);

        AccountFactory currentFactory = new AccountFactory();
        IAccount currentAccount = currentFactory.makeAccount("Current");
        currentAccount.creditAmount(300);
        currentAccount.debitAmount(250);
	}

}
